{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",
    "dev": "turbo run dev --no-cache  --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:staged": "lint-staged",
    "test": "turbo run test"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "tailwindcss": "^3.2.7",
    "turbo": "latest",
    "typescript": "^4.9.3"
  },
  "packageManager": "pnpm@7.15.0",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "pnpx prettier --write"
    ]
  }
}