{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        ".next/**",
        ".vercel/**",
        "build/**",
        "api/**",
        "public/build/**"
      ],
      "dependsOn": [
        "^build",
        "db:generate"
      ]
    },
    "lint": {
      "dependsOn": [
        "^build"
      ]
    },
    "lint:staged": {},
    "db:generate": {
      "cache": false
    },
    "db:migrate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "^db:generate"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}